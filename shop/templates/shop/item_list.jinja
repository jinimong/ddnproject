<!DOCTYPE html>
<html
  <head>
    <meta charset="utf-8">
    <title>Lemon's Shop</title>
  </head>
  <body>
    <h1>Lemon's Item List</h1>

    <form action="" method="GET">
      <input type="text" name="word" value="{{ word }}">
      <input type="submit" value="search">
    </form>

    {{ user }}

    <ul>
      {% for item in item_list %}
        <li>
          <p>이름 : {{ item.name }}</p>
          <p>가격 : {{ item.price }}</p>
          <p>설명 : {{ item.desc }}</p>
        </li>
      {% endfor %}
    </ul>

  </body>
</html>
